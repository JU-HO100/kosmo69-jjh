    pageEncoding="UTF-8"%>
    
<%
	int tot = 0;
	List<Map<String,Object>> boardList = null;
	boardList = (List<Map<String,Object>>)request.getAttribute("boardList");
	if(boardList != null) {
		tot= boardList.size();
	}
%>

<!DOCTYPE html>
<html>
<head>
