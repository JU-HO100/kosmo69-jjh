<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd"><!-- xml파일의 명세서 -->
<configuration>
	<environments default="development"><!-- environment은 1개의 environment만 쓸수 
			있지만 environments는 여러개의 environment를 쓸수 있다. 시작지점 -->
		<environment id="development"> <!-- 1번째 environment 시작 -->
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver"
					value="oracle.jdbc.driver.OracleDriver" />
				<property name="url"
					value="jdbc:oracle:thin:@192.168.0.38:1521:orcl11" />
				<property name="username" value="scott" />
				<property name="password" value="tiger" />
			</dataSource>
		</environment> <!-- 1번째 environment 끝 -->
		<!-- environments가 없으면 n개 이상의 environment를 쓸 경우 에러가 난다. -->
		<!-- <environment id="development2"> -->  <!-- 2번째 environment시작 -->
		<!-- <transactionManager type="JDBC"/> -->
		<!-- <dataSource type="POOLED"> -->
		<!-- <property name="driver" value="com.mysql.jdbc.Driver"/> -->
		<!-- <property name="url" value="jdbc:mysql://127.0.0.1:3306/test"/> -->
		<!-- <property name="username" value="abc"/> -->
		<!-- <property name="password" value="123"/> -->
		<!-- </dataSource> -->
		<!-- </environment> --> <!-- 2번째 environment 끝 -->
	</environments> <!-- 끝나는 지점 -->
	<mappers>
		<mapper resource="oracle/mybatis/dept.xml" />
		<mapper resource="oracle/mybatis/emp.xml" />
		<mapper resource="oracle/mybatis/zipcode.xml" />
	</mappers>
</configuration>