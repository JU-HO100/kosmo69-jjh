<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="stv" class="com.ch3.SamsungTV" />
	<bean id="ltv" class="com.ch3.LGTV" />
	
	<bean id="helloBean" class="com.ch3.HelloBeanImpl" init-method="initMethod">
		<property name="msg">
			<value>Hellow World</value>
		</property>
	</bean>
	
	<bean id="byeBean" class="com.ch3.HelloBeanImpl" destroy-method="destroyMethod">
		<property name="msg">
			<value>Bye World</value>
		</property>
	</bean>
</beans>
